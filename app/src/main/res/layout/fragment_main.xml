<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/green"
        app:dotsCornerRadius="@dimen/indicator_radius"
        app:dotsSize="@dimen/indicator_size"
        app:dotsSpacing="@dimen/in_dots"
        android:layout_marginStart="@dimen/in_start"
        app:dotsWidthFactor="2.5"
        android:layout_marginTop="@dimen/in_top"
        app:selectedDotColor="@color/green"
        app:progressMode="true" />

</FrameLayout>